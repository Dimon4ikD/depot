%p#notice= notice

.br
.page-header
  .h1=@product.name

.row


%p
  %b Название:
  = @product.name
%p
  %b Описание:
  = @product.description
%p
  %b Цена:
  = number_to_currency(@product.price, unit: "\u20BD", separator: ",", delimiter: "", format: "%n %u")
%p
  %b Вес:
  = @product.weight

= link_to line_items_path(product_id: @product.id), data:{method: :post}, class: "btn btn-primary" do
  =fa_icon "cart-plus"
  Добавить в корзину

\|
= link_to 'Перейти к корзине', @cart, class: "btn btn-info"
\|
= link_to 'Редактировать', edit_product_path(@product), class: "btn btn-warning"
\|
= link_to 'Назад', products_path, class: "btn btn-primary"